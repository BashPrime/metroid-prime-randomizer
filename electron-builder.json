{
  "productName": "Metroid Prime Randomizer",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!**/*.js.map",
    "!*.code-workspace",
    "!*.github/",
    "!*.vscode/",
    "!LICENSE",
    "!README.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!.angular-cli.json",
    "!.gitmodules",
    "!binding.gyp",
    "!_config.yml",
    "!karma.conf.js",
    "!postcss.config.js",
    "!postinstall*.js",
    "!tsconfig*.json",
    "!tslint.json",
    "!bin/",
    "!build/",
    "!randomprime/",
    "!output/"
  ],
  "extraFiles": [
    "build/Release/randomprime.node"
  ],
  "win": {
    "icon": "dist",
    "target": [
      "nsis", "zip"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg", "zip"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage", "tar.gz"
    ]
  }
}
