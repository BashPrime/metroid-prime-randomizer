{
  "name": "metroid-prime-randomizer",
  "version": "1.3.1",
  "description": "Metroid Prime Randomizer",
  "homepage": "https://github.com/etaylor8086/metroid-prime-randomizer",
  "contributors": [
    {
      "name": "BashPrime"
    },
    {
      "name": "Pwootage"
    },
    {
      "name": "April Wade"
    }
  ],
  "keywords": [
    "metroid prime",
    "metroid",
    "randomizer",
    "item randomizer",
    "angular",
    "electron",
    "typescript",
    "sass"
  ],
  "private": true,
  "scripts": {
    "preinstall": "npm run randomprime:build",
    "postinstall": "npm run postinstall:electron && electron-builder install-app-deps && npm run native:build",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build",
    "build:client": "npm run ng:build:prod --prefix src/client",
    "build:electron": "webpack --config ./webpack-electron.config.js",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "client": "npm run ng:serve --prefix src/client",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:dev": "electron ./dist/main.js --serve",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && electron-builder build --linux",
    "electron:windows": "npm run build:prod && electron-builder build --windows",
    "electron:mac": "npm run build:prod && electron-builder build --mac",
    "native:build": "./node_modules/.bin/electron-rebuild",
    "randomprime:build": "cargo build --release --manifest-path=./randomprime/Cargo.toml",
    "randomprime:clean": "cargo clean --manifest-path=./randomprime/Cargo.toml",
    "test": "npm run postinstall:web && ng test",
    "test:electron": "mocha -r ts-node/register test/**/*.test.ts",
    "e2e": "npm run postinstall:web && ng e2e"
  },
  "dependencies": {
    "@angular/animations": "~8.2.5",
    "@angular/common": "~8.2.5",
    "@angular/compiler": "~8.2.5",
    "@angular/core": "~8.2.5",
    "@angular/forms": "~8.2.5",
    "@angular/platform-browser": "~8.2.5",
    "@angular/platform-browser-dynamic": "~8.2.5",
    "@angular/router": "~8.2.5",
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-brands": "^5.0.13",
    "big-integer": "^1.6.32",
    "bulma": "^0.7.5",
    "compare-versions": "^3.4.0",
    "electron": "3.0.10",
    "napi-thread-safe-callback": "^0.0.1",
    "ngx-clipboard": "^11.1.1",
    "node-addon-api": "1.5.0",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.4",
    "@angular/cli": "~8.3.4",
    "@angular/compiler-cli": "~8.2.5",
    "@angular/language-service": "~8.2.5",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/chai": "^4.1.7",
    "@types/crypto-js": "^3.1.43",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "~8.9.4",
    "chai": "^4.2.0",
    "codelyzer": "^5.0.0",
    "conventional-changelog-cli": "2.0.11",
    "core-js": "~2.5.7",
    "electron-builder": "20.36.2",
    "electron-rebuild": "^1.8.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "mocha": "^6.1.4",
    "node-gyp": "^3.7.0",
    "npm-run-all": "4.1.5",
    "protractor": "~5.4.0",
    "ts-loader": "^6.1.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3",
    "wait-on": "3.2.0",
    "webdriver-manager": "12.1.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-node-externals": "^1.7.2"
  }
}
