{
  "name": "metroid-prime-randomizer",
  "version": "2.5.0",
  "description": "Metroid Prime Randomizer",
  "homepage": "https://github.com/BashPrime/metroid-prime-randomizer",
  "contributors": [
    {
      "name": "BashPrime"
    },
    {
      "name": "Pwootage"
    },
    {
      "name": "April Wade"
    }
  ],
  "keywords": [
    "metroid prime",
    "metroid",
    "randomizer",
    "item randomizer",
    "angular",
    "electron",
    "typescript",
    "sass"
  ],
  "private": true,
  "main": "main.js",
  "scripts": {
    "postinstall": "npm run randomprime:build && npm run postinstall:electron && electron-builder install-app-deps && electron-builder node-gyp-rebuild",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "npm run build:dev",
    "build:dev": "npm run electron:build && ng build",
    "build:prod": "npm run electron:build:prod && ng bulid --prod",
    "ng:serve": "ng serve",
    "ng:serve:web": "ng serve -o",
    "electron:build": "webpack --config ./webpack.development.js",
    "electron:build:prod": "webpack --config ./webpack.production.js",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:build && electron . --serve",
    "electron:prod": "npm run electron:build:prod && electron .",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && electron-builder build --linux",
    "electron:windows": "npm run build:prod && electron-builder build --windows",
    "electron:mac": "npm run build:prod && electron-builder build --mac",
    "electron:test": "jest",
    "randomprime:build": "cross-env RUSTC_BOOTSTRAP=1 cargo build --release --manifest-path=./randomprime/Cargo.toml",
    "randomprime:clean": "cargo clean --manifest-path=./randomprime/Cargo.toml",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.2",
    "@angular/animations": "^10.2.4",
    "@angular/cdk": "^10.2.7",
    "@angular/cli": "^10.2.2",
    "@angular/common": "^10.2.4",
    "@angular/compiler": "^10.2.4",
    "@angular/compiler-cli": "^10.2.4",
    "@angular/core": "^10.2.4",
    "@angular/forms": "^10.2.4",
    "@angular/language-service": "^10.2.4",
    "@angular/platform-browser": "^10.2.4",
    "@angular/platform-browser-dynamic": "^10.2.4",
    "@angular/router": "^10.2.4",
    "@fortawesome/angular-fontawesome": "^0.7.0",
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-brands": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "^2.0.8",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.11.1",
    "@types/uuid": "^3.4.9",
    "@types/webpack-env": "^1.15.2",
    "big-integer": "^1.6.48",
    "bulma": "^0.7.5",
    "bulma-checkradio": "^1.1.1",
    "bulmaswatch": "^0.7.5",
    "compare-versions": "^3.6.0",
    "core-js": "~2.5.7",
    "cross-env": "^7.0.3",
    "electron": "^9.4.3",
    "electron-builder": "^22.8.1",
    "electron-reload": "1.5.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "jest": "^26.6.3",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "napi-thread-safe-callback": "^0.0.1",
    "ngx-clipboard": "^12.3.1",
    "ngx-markdown": "^10.1.1",
    "ngx-toastr": "^11.3.3",
    "node-addon-api": "1.5.0",
    "npm-run-all": "4.1.5",
    "primeicons": "^2.0.0",
    "primeng": "^10.0.3",
    "protractor": "~7.0.0",
    "rxjs": "~6.6.3",
    "terser-webpack-plugin": "^2.3.6",
    "ts-jest": "^26.4.4",
    "ts-loader": "^6.2.2",
    "ts-node": "~7.0.0",
    "tslib": "^2.0.0",
    "typescript": "~4.0.5",
    "uuid": "^3.4.0",
    "wait-on": "3.2.0",
    "webdriver-manager": "12.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "zone.js": "~0.10.2"
  }
}
