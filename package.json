{
  "name": "metroid-prime-randomizer",
  "version": "2.2.1",
  "description": "Metroid Prime Randomizer",
  "homepage": "https://github.com/etaylor8086/metroid-prime-randomizer",
  "contributors": [
    {
      "name": "BashPrime"
    },
    {
      "name": "Pwootage"
    },
    {
      "name": "April Wade"
    }
  ],
  "keywords": [
    "metroid prime",
    "metroid",
    "randomizer",
    "item randomizer",
    "angular",
    "angular 10",
    "electron",
    "typescript",
    "eslint",
    "spectron",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "preinstall": "npm run randomprime:build",
    "postinstall": "electron-builder install-app-deps && npm run native:build",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:webpack && npm run ng:build --prefix src/gui",
    "build:prod": "npm run electron:webpack:prod && npm run ng:build:prod --prefix src/gui",
    "ng:serve": "npm run ng:serve --prefix src/gui",
    "ng:serve:web": "npm run ng:serve -c web -o --prefix src/gui",
    "electron:serve": "wait-on tcp:4200 && npm run electron:webpack && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run build:prod && electron-builder build",
    "electron:webpack": "webpack --config ./webpack.development.js",
    "electron:webpack:prod": "webpack --config ./webpack.production.js",
    "native:build": "./node_modules/.bin/electron-rebuild",
    "randomprime:build": "cargo build --release --manifest-path ./randomprime/Cargo.toml",
    "randomprime:clean": "cargo clean --manifest-path ./randomprime/Cargo.toml",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && cross-env TS_NODE_PROJECT='e2e/tsconfig.e2e.json' mocha --timeout 300000 --require ts-node/register e2e/**/*.e2e.ts",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "9.2.0",
    "@angular-devkit/build-angular": "0.1000.2",
    "@angular-eslint/builder": "0.0.1-alpha.32",
    "@angular-eslint/eslint-plugin": "0.0.1-alpha.32",
    "@angular-eslint/eslint-plugin-template": "0.0.1-alpha.32",
    "@angular-eslint/template-parser": "0.0.1-alpha.32",
    "@angular/animations": "^10.0.3",
    "@angular/cli": "10.0.2",
    "@angular/common": "10.0.3",
    "@angular/compiler": "10.0.3",
    "@angular/compiler-cli": "10.0.3",
    "@angular/core": "10.0.3",
    "@angular/forms": "10.0.3",
    "@angular/language-service": "10.0.3",
    "@angular/platform-browser": "10.0.3",
    "@angular/platform-browser-dynamic": "10.0.3",
    "@angular/router": "10.0.3",
    "@fortawesome/angular-fontawesome": "^0.5.0",
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-brands": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@ngx-translate/core": "13.0.0",
    "@ngx-translate/http-loader": "6.0.0",
    "@types/jasmine": "3.5.11",
    "@types/jasminewd2": "2.0.8",
    "@types/mocha": "7.0.2",
    "@types/node": "12.12.6",
    "@types/uuid": "^3.4.9",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "3.6.0",
    "@typescript-eslint/eslint-plugin-tslint": "3.6.0",
    "@typescript-eslint/parser": "3.6.0",
    "big-integer": "^1.6.48",
    "bulma": "^0.7.5",
    "bulma-checkradio": "^1.1.1",
    "bulmaswatch": "^0.7.5",
    "chai": "4.2.0",
    "compare-versions": "^3.6.0",
    "core-js": "3.6.5",
    "cross-env": "7.0.2",
    "electron": "9.1.0",
    "electron-builder": "22.7.0",
    "electron-rebuild": "^1.10.1",
    "electron-reload": "1.5.0",
    "eslint": "7.4.0",
    "eslint-plugin-import": "2.22.0",
    "jasmine-core": "3.5.0",
    "jasmine-spec-reporter": "5.0.2",
    "karma": "5.1.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "6.3.0",
    "karma-jasmine": "3.3.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "mocha": "7.2.0",
    "napi-thread-safe-callback": "^0.0.1",
    "ngx-clipboard": "^12.3.1",
    "ngx-markdown": "^8.2.2",
    "ngx-toastr": "^11.3.3",
    "node-addon-api": "1.5.0",
    "npm-run-all": "4.1.5",
    "primeicons": "^2.0.0",
    "primeng": "^9.0.6",
    "rxjs": "6.6.0",
    "spectron": "11.1.0",
    "terser-webpack-plugin": "^2.3.6",
    "ts-loader": "^6.2.2",
    "ts-node": "8.10.2",
    "tslib": "2.0.0",
    "typescript": "3.9.6",
    "uuid": "^3.4.0",
    "wait-on": "5.0.1",
    "webdriver-manager": "12.1.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "zone.js": "0.10.3"
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
